{
	"name": "synthwave-stack",
	"private": true,
	"description": "",
	"license": "MIT",
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "remix dev",
		"format": "prettier --write .",
		"generate:css": "tailwindcss -o ./styles/tailwind.css",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"prepare": "husky install",
		"postinstall": "remix setup node",
		"typecheck": "tsc -b"
	},
	"dependencies": {
		"@prisma/client": "^3.13.0",
		"@remix-run/node": "1.4.3",
		"@remix-run/react": "1.4.3",
		"@remix-run/vercel": "1.4.3",
		"@vercel/node": "1.14.0",
		"framer-motion": "^6.3.3",
		"react": "17.0.2",
		"react-dom": "^17.0.2",
		"remix": "^1.4.3",
		"tailwindcss-radix": "^2.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "1.4.3",
		"@remix-run/eslint-config": "1.4.3",
		"@remix-run/serve": "1.4.3",
		"@types/eslint": "8.4.2",
		"@types/react": "17.0.24",
		"@types/react-dom": "17.0.9",
		"autoprefixer": "^10.4.7",
		"concurrently": "^7.1.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.4.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.13",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.10",
		"prisma": "^3.13.0",
		"tailwindcss": "^3.0.24",
		"ts-node": "^10.7.0",
		"typescript": "4.5.5"
	},
	"engines": {
		"node": ">=14"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --cache --fix",
			"prettier --write"
		]
	}
}
